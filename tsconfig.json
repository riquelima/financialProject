
{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "Node16", 
    "moduleResolution": "node16", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      // Example: "@/components/*": ["components/*"]
    }
  },
  "include": [
    "index.tsx",
    "App.tsx",
    "constants.tsx",
    "types.ts",
    "ErrorBoundary.tsx",
    "components/**/*.tsx",
    "hooks/**/*.tsx",
    "screens/**/*.tsx",
    "utils/**/*.ts"
    // Note: api/chat.js is a .js file and typically handled by Vercel's serverless function runtime directly.
    // It does not need to be included here for client-side TS compilation.
  ],
  "exclude": ["node_modules", "dist", "api"]
}